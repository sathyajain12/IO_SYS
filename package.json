{
    "name": "inward-outward-system",
    "private": true,
    "workspaces": [
        "client",
        "worker"
    ],
    "scripts": {
        "build": "npm run build --workspace=client",
        "dev:client": "npm run dev --workspace=client",
        "dev:worker": "npm run dev --workspace=worker",
        "deploy:client": "npm run build --workspace=client && npx wrangler pages deploy client/dist --project-name inward-outward-system",
        "deploy:worker": "npm run deploy --workspace=worker"
    },
    "engines": {
        "node": "18.x"
    }
}
