{
  "name": "inward-outward-worker",
  "version": "1.0.0",
  "description": "Cloudflare Workers backend for Inward/Outward System with D1",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:migrate:local": "wrangler d1 execute inward-outward-db --local --file=./migrations/0001_init.sql",
    "db:migrate": "wrangler d1 execute inward-outward-db --file=./migrations/0001_init.sql",
    "db:studio": "wrangler d1 studio inward-outward-db"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.93.3",
    "dotenv": "^17.2.3",
    "hono": "^4.4.0"
  },
  "devDependencies": {
    "wrangler": "^3.60.0"
  }
}
