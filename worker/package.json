{
  "name": "inward-outward-worker",
  "version": "1.0.0",
  "description": "Cloudflare Workers backend for Inward/Outward System with D1",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "build": "esbuild src/spa.js --bundle --format=esm --outfile=../dist/_worker.js --platform=neutral --external:cloudflare:workers",
    "db:migrate:local": "wrangler d1 execute inward-outward-db --local --file=./migrations/0001_init.sql",
    "db:migrate": "wrangler d1 execute inward-outward-db --file=./migrations/0001_init.sql",
    "db:query": "wrangler d1 execute inward-outward-db --local --command"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.93.3",
    "dotenv": "^17.2.3",
    "hono": "^4.4.0",
    "nodemailer": "^8.0.1"
  },
  "devDependencies": {
    "esbuild": "^0.25.0",
    "wrangler": "^3.60.0"
  }
}
